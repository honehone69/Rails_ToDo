<div class="container">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>項目</th>
          <th>内容</th>
          <th>状態</th>
          <th>優先度</th>
          <th>カテゴリー</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% if todos.present? %>
          <% todos.each do |todo| %>
            <tr>
              <td><%= link_to  todo  do %><%= todo.title %><% end %></td>
              <td><%= todo.body %></td>
              <td><%= todo.status %></td>
              <td><%= todo.priority %></td>
              <td><%= todo.category.try(:name) %></td>
              <td><%= link_to '完了', status_todo_path(todo, status: 1), method: :patch %></td>
              <td><%= link_to '編集', edit_todo_path(todo) %></td>
              <td><%= link_to '削除', todo, method: :delete, data: { confirm: '本当に削除してもいいですか？' } %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= paginate todos %>